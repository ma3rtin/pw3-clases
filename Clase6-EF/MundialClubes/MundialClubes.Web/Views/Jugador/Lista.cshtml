@model List<MundialClubes.Entidades.EF.JugadorEstrella>
    
@{
    ViewData["Title"] = "Lista de Jugadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Jugadores</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Foto</th>
            <th>Edad</th>
            <th>Descripcion</th>
            <th>Eliminar</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var jugador in Model)
        {
            <tr class="text-center align-middle">
                <td>
                    <a href="/Jugador/Actualizar/@jugador.IdJugadorEstrella" class="text-decoration-none fw-semibold">
                        @jugador.Nombre
                    </a>
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(jugador.FotoUrl))
                    {
                        <img src="@jugador.FotoUrl" style="height:120px; width:100px; object-fit:cover;" alt="@jugador.Nombre" />
                    }
                </td>
                <td>
                    @jugador.Edad
                </td>
                <td>
                    @jugador.Descripcion
                </td>
                <td>
                <a class="text-danger" href="/Jugador/Eliminar/@jugador.IdJugadorEstrella">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>

</table>
