@model List<Clase3.MVC.Entidades.Automovil>
@{
}

<h1>Lista de Automoviles</h1>

<table class="table">
	<thead class="thead-black">
		<tr>
			<th >Marca</th>
			<th>Modelo</th>
			<th>Imagen</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var automovil in Model)
		{
			<tr>
				<td>@automovil.Marca</td>
				<td>@automovil.Modelo</td>
				<td><img src="@automovil.Foto" alt="Imagen de @automovil.Marca" style="width: 100px; height: 100px;" /></td>
				<td><a asp-controller="Automoviles" asp-action="Eliminar" asp-route-id="@automovil.Id">Eliminar</a></td>
			</tr>
		}
</table>

<a asp-controller="Automoviles" asp-action="Agregar" class="btn btn-primary">Agregar automovil</a>
